.selection{
  border-bottom: 5px solid #ddd;

}

.header {
  border-left-width: 2px;
  border-left-style: solid;
  border-left-color: green;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.text-all {
  color: green;
  font-size: 14px;
}

.content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}

.content-item {
  height: 100px;
  width: 45%;
  background-color: greenyellow;
  margin: 5px;
  position: relative;
}

.content-item image {
  width: 100%;
  height: 100%;
}

.content-item-text {
  position: absolute;
  bottom: 0px;
  left: 2px;
  color: white;
  font-size: 10px;
  background: -webkit-linear-gradient(bottom, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0));
  height: 50rpx;
  width: 97%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-left: 2%;
  padding-right: 1%;
  padding-bottom: 2%;
}

.list-item{
  height: 500rpx;
  width: 100%;
}
.list-item-images{
   height: 300rpx;
   width: 100%;
   position: relative;
}

.list-item-images-img{
   height: 100%;
   width: 100%;
}


.avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  bottom: -50rpx;
  right: 50rpx;
}


.list-item-text{
  height: 200rpx;
  width: 96%;
  margin-top: 20rpx;
  padding-left: 2%;
  padding-right: 2%; 
}

.list-item-text-content{
  font-size: 10px;
  color: #999;
  margin-top: 20rpx;

}