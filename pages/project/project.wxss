.tab-h {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #f7f7f7;
  font-size: 16px;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

/*  选中条目  */

.tab-item {
  margin: 0 36rpx;
  display: inline-block;
}

.tab-content {
  margin-top: 80rpx;
}

/*  选中条目的文字  */

.tab-item.active {
  color: #4675f9;
  position: relative;
}

/*  下划线  */

.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 99rpx;
  background: #4675f9;
  position: absolute;
  bottom: 0;
  left: 10rpx;
  border-radius: 16rpx;
}

/*  */

.item-ans {
  width: 100%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
  align-items: center;
  border-bottom: 1px solid #f2f2f2;
}

/*  */

/*  */

.avatar {
  width: 80rpx;
  height: 80rpx;
  position: relative;
  padding-right: 30rpx;
}

/*  */

.avatar .img {
  width: 100%;
  height: 100%;
}

.avatar .doyen {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: -2px;
  right: 20rpx;
}

.expertInfo {
  font-size: 12px;
  flex-grow: 2;
  color: #b0b0b0;
  line-height: 1.5em;
}

.expertInfo .title {
  font-size: 16px;
  color: #000;
  margin-bottom: 6px;
}

.expertInfo .desc text {
  display: -webkit-box;
  font-size: 28rpx;
  color: #000;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.askBtn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 14px;
  border-radius: 60rpx;
  border: 1px solid #4675f9;
  color: #4675f9;
}

.scoll-h {
  height: 100%;
}

.item_view {
  display: flex;
  /* flex-direction: row; */
  flex-grow: row no-wrap;
  justify-content: space-between;
}

.envelopePic .img {
  width: 150rpx;
