.tab-h {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #f7f7f7;
  font-size: 16px;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

/*  选中条目  */

.tab-item {
  margin: 0 30rpx;
  display: inline-block;
}

.tab-content {
  margin-top: 80rpx;
}

/*  选中条目的文字  */

.tab-item.active {
  color: #4675f9;
  position: relative;
}

/*  下划线  */

.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 99rpx;
  background: #4675f9;
  position: absolute;
  bottom: 0;
  left: 10rpx;
  border-radius: 16rpx;
}

.item-ans {
  width: 100%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
  align-items: center;
  border-bottom: 1px solid #f2f2f2;
}

.item-top {
  display: flex;
  position: relative;
  padding-right: 30rpx;
}


.img-avatar {
  width: 60rpx;
  height: 60rpx;
  flex-shrink: 0;
  /* flex-basis: 60rpx; */
}

.author {
  font-size: 24rpx;
  color: #b0b0b0;
}

.title {
  display: -webkit-box;
  font-size: 30rpx;
  color: #000;
  margin: 10rpx 0rpx 5rpx 10rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}

 .desc {
  display: -webkit-box;
  font-size: 28rpx;
  color: #000;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  margin: 20rpx 0rpx;
}


.scoll-height {
  height: 100%;
}

.img-envelopePic {
  width: 150rpx;
  height: 240rpx;
  margin-right: 20rpx;
}
