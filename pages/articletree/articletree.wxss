/* pages/articletree/articletree.wxss */

.list_item {
  display: flex;
  flex-direction: column;
  margin: 5rpx;
}

.card_view {
  border: 2rpx solid #eee;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 10rpx 2rpx 2rpx #ccc;
  margin: 20rpx;
  padding: 5rpx;
  position: relative;
}

.list_item_top {
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: center;
}

.container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  white-space: nowrap;
}

.list_item_content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  white-space: nowrap;
  padding: 10rpx;
  margin: 10rpx;
  /* background: green; */
  border-radius: 10rpx;
}

.text_content {
  font-size: 30rpx;
  color: #fff;
  white-space: nowrap;
}
